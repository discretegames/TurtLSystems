{
	"files.exclude": {
		".coverage": true,
		"desktop.ini": true,
		".pytest_cache/": true,
		".mypy_cache/": true,
		"**/__pycache__/": true,
		"**/*.egg-info/": true,
		"**/.eggs/": true,
		".tox/": true,
		"htmlcov/": true,
		".github": true,
		"venv": false,
		"LICENSE.txt": true
	},
	"cSpell.words": [
		"bgpic",
		"cmode",
		"exitonclick",
		"isdown",
		"penup",
		"Turt",
		"turtlsystems"
	],
	"python.analysis.diagnosticMode": "workspace", // Set to "workspace" to reveal problems everywhere.
	"python.linting.enabled": true,
	"python.linting.lintOnSave": true,
	"python.linting.mypyEnabled": true,
	"python.linting.mypyArgs": [
		"--strict",
	],
	"python.linting.pylintEnabled": true,
	"python.linting.pylintArgs": [
		"--ignored-modules=turtle"
	],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": [
		"--max-line-length=119"
	],
}